<Window x:Class="MegafonInvalidApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegafonInvalidApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="600" MinHeight="600">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top">
            
            <TextBlock x:Name="Autorization_Text" Text="Авторизация" TextAlignment="Left" VerticalAlignment="Center" Margin="20,0" FontSize="22" FontFamily="Segoe UI Light" Height="30" />
            <TextBlock x:Name="Login_Text" Text="Логин" TextAlignment="Left" VerticalAlignment="Center" Margin="20,20,20,0" Height="30" FontSize="14" />
            <TextBox x:Name="Login_Box" Height="30" Width="350" />
            <TextBlock x:Name="Password_Text" Text="Пароль" TextAlignment="Left" VerticalAlignment="Center" Margin="20,20,20,0" Height="30" FontSize="14" />
            <TextBox x:Name="Password_Box" Height="30" Width="350" />
        </StackPanel>
    </Grid>
</Window>
